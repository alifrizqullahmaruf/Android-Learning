<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SecondaryActivity">

    <TextView
        android:id="@+id/textRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <Button
        android:layout_below="@+id/textRelative"
        android:id="@+id/buttonRelative"
        android:layout_marginTop="24dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sebelumnya"
        />
    <Button
        android:layout_below="@+id/buttonRelative"
        android:id="@+id/buttonRelative2"
        android:layout_marginTop="24dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Selanjunya"
        />

</RelativeLayout>